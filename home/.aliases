# Unix
alias ed='ed -p "> " "$@"'
alias la="ls -a"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias c="clear"
alias x="exit"

# Git
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'
alias gl='git log --oneline --grpah --decorate'
alias gp='git push'
alias gs='git diff'
alias gs='git status'

# llm manpages
alias ?="llm"

# Bundler
alias b="bundle"

# Rails
alias migrate="bin/rails db:migrate db:rollback && bin/rails db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo ${PATH//:/\\n}'

# Easier navigation: ..., ....
alias ...="cd ../.."
alias ....="cd ../../.."

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
