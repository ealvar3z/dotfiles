#!/usr/bin/env perl

use strict;
use warnings;
use autodie;
use POSIX qw(strftime);
use File::Spec;
use File::Basename;

my $posts = $ENV{"PTB_DIR"} // $ENV{"HOME"} . "ptb/txt";
my $ed	  = $ENV{"EDITOR"} // "ed"; # ed(1) is the standard editor

mkdir $posts unless -d $posts;
my $date = strftime("%Y%m%d", localtime);

die "Usage: $0 <title>\n" unless @ARGV;
my $title = join(" ", @ARGV);

# slugify the title
$title =~ s/[^[:alnum:]]+/-/g;
$title = lc($title);
$title =~ s/^-|-$//g; #trim hyphens from start/end

my $fn = File::Spec->catfile($posts, "${date}_$title.txt");
die "[ERROR] File '$fn' alread exists!\n" if -e $fn;

open my $fh, ">", $fn;
print $fh "\n";
close $fh;

exec $ed, $fn;
